<%- include('../../layouts/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../../layouts/navigation.ejs') %>

    <main>
        <% if (prods.length > 0) { %>
            <div class="grid">
                <% for (let product of prods) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= product.title %></h1>
                        </header>
                        <div class="card__image">
                            <img src=<%= product.imageUrl %> alt="A Book">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">$<%= parseFloat(product.price).toFixed(2) %></h2>
                            <p class="product__description"><%= product.description %></p>
                        </div>
                        <div class="card__actions">
                            <button class="btn" onclick="(window.location.href='/admins/products/<%= product.id %>/edit')"  >Edit</button>
                            <form class="inline" action="/admins/products/<%= product.id %>?_method=DELETE" method="POST" >
                               <button class="btn" type="submit">Delete</button> 
                            </form>
                            
                        </div>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>No Products Found!</h1>
        <% } %>
    </main>
    <%- include('../../layouts/end.ejs') %>