<%- include('../../layouts/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../../layouts/navigation.ejs') %>
    </header>

    <main>
        <form class="product-form" action="/admins/products/<%= prods.id %>?_method=PUT" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<%= prods.title %>">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<%= prods.imageUrl %>">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"><%= prods.description %>"></textarea>
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01" value="<%= prods.price %>">
            </div>

            <button class="btn" type="submit">Edit Product</button>
        </form>
    </main>
<%- include('../../layouts/head.ejs') %>